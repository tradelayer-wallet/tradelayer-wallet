{
  "name": "tradelayer-wallet",
  "version": "0.0.0",
  "scripts": {

    "dev:norpc": "ng serve --configuration norpc",
    "build:dev": "ng build --base-href ./ --watch --configuration development",
    "build:prod:watch": "ng build --base-href ./ --watch --configuration production",
    "build:prod": "ng build --base-href ./ --configuration production",
    "el:build": "webpack --config el-webpack.config",
    "start": "npm run start:el",
    "start:el": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "tl.wallet.1",
    "productName": "TradeLayer Wallet",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "asar": false,
    "nsis":{
      "oneClick": false,
      "allowToChangeInstallationDirectory":true
      },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "dist/assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "dist/assets/icon.png"
    }
  },
  "private": true,
  "main": "main.js",
  "dependencies": {
    "@angular/animations": "~12.0.0",
    "@angular/cdk": "^12.0.0",
    "@angular/common": "~12.0.0",
    "@angular/compiler": "~12.0.0",
    "@angular/core": "~12.0.0",
    "@angular/forms": "~12.0.0",
    "@angular/material": "^12.0.0",
    "@angular/platform-browser": "~12.0.0",
    "@angular/platform-browser-dynamic": "~12.0.0",
    "@angular/router": "~12.0.0",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "buffer": "^5.7.1",
    "crypto": "^1.0.1",
    "crypto-js": "^4.0.0",
    "file-saver": "^2.0.5",
    "litecore-lib": "^0.13.22",
    "ngx-toastr": "^14.0.0",
    "rxjs": "~6.6.0",
    "socket.io-client": "^4.1.2",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.0",
    "@angular/cli": "~12.0.0",
    "@angular/compiler-cli": "~12.0.0",
    "@types/crypto-js": "^4.0.1",
    "@types/file-saver": "^2.0.2",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "electron": "^12.0.9",
    "electron-builder": "22.10.5",
    "electron-reloader": "^1.2.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "typescript": "~4.2.3",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.2"
  }
}

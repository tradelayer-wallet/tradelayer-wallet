{
  "name": "tradelayer-wallet",
  "version": "0.0.12",
  "description": "Official Tradelayer Wallet",
  "author": "Valentin Peshev",
  "license": "ISC",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "electron:dist": "electron-builder --config ./electron-builder.json",
    "electron:build": "webpack --config ./builder/builder-webpack.config.js",
    "electron:build:watch": "webpack --config ./builder/builder-webpack.config.js --watch",
    "server:build:windows": "webpack --config ./packages/wallet-server/webpack.config.js --env os=WINDOWS",
    "server:build:linux": "webpack --config ./packages/wallet-server/webpack.config.js --env os=LINUX",
    "server:build:mac": "webpack --config ./packages/wallet-server/webpack.config.js --env os=MAC",
    "fe:build": "npm run build --prefix ./packages/wallet-fe",
    "fe:build:watch": "npm run build:watch --prefix ./packages/wallet-fe",
    "install:all": "npm install && npm install --prefix ./packages/wallet-fe",
    "build:all:windows": "npm run fe:build && npm run server:build:windows && npm run electron:build",
    "build:all:linux": "npm run fe:build && npm run server:build:linux && npm run electron:build",
    "build:all:mac": "npm run fe:build && npm run server:build:mac && npm run electron:build"
  },
  "dependencies": {
    "@trezor/connect": "^9.0.2",
    "abstract-level": "^1.0.3",
    "agentkeepalive": "^4.5.0",
    "axios": "^1.6.2",
    "big-json": "^3.2.0",
    "bigint-base-converter": "0.1.3",
    "bignumber.js": "^9.1.2",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bitcoin": "3.0.3",
    "bitcoinjs-lib": "^6.0.1",
    "bitcore-lib-ltc": "^10.0.21",
    "child_process": "^1.0.2",
    "dogecoind-rpc": "0.8.1",
    "ecpair": "^2.0.1",
    "electron-updater": "^4.6.1",
    "exponential-backoff": "^3.1.1",
    "express": "^4.19.2",
    "fastify": "^3.19.2",
    "forever": "^4.0.3",
    "fs": "*",
    "kill-port": "^1.6.1",
    "litecoin": "^2.0.5",
    "moment": "^2.29.4",
    "nedb": "^1.8.0",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "tiny-secp256k1": "^2.2.1",
    "tl-rpc": "^1.0.4",
    "ts-loader": "^9.2.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.17.5",
    "acorn-import-attributes": "^1.9.5",
    "copy-webpack-plugin": "^9.0.1",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-reloader": "^1.2.1",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  }
}
